<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{ headline }} | Julia Czarnecki</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../../assets/css/style.css" />
    <link href="../assets/img/favicon.ico" rel="shortcut icon" type="image/x-icon" />

</head>

<body class="vh-100">
    <!-- header -->
    {% include "header.njk" %}
    <!-- /header -->
    <section style="background: url('{{ banner }}') no-repeat center center"
        class="d-flex justify-content-center align-items-center portfolio-header text-center text-white bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-2">{{ headline }}</h1>
                    <p class="pb-0 mb-0">{{ title }}</p>
                </div>
            </div>
        </div>
    </section>
    <main role="main">
        <!-- breadcrumb -->
        <div class="container">
            <ol class="breadcrumb mt-3">
                <li><a href="/">Home &rsaquo;&rsaquo;</a>&nbsp;&nbsp;</li>
                <li><a href="/#design">Design &rsaquo;&rsaquo;</a>&nbsp;&nbsp;</li>
                <li class="active">{{ headline }}</li>
            </ol>
        </div>
        <!-- /breadcrumb -->
        <section class="portfolio_start">
            <div class="container text-left">
                <h2 class="display-4">Concept</h2>
                {{content | safe}}
            </div>
        </section>

        <!-- featurettes -->
        {% set colors = ['text-bg-info', 'text-bg-light', 'text-bg-deeper-purple' ] %}
        {% for feature in featurettes %}

        {% include "featurette.njk" %}

        {% endfor %}
        <!-- /featurettes -->
        <!-- hero -->
        {% if hero %}
        <section class="container-fluid m-0 p-0">
            <img class="img-fluid" src="{{ hero }}" alt="{{ heroAlt }}">
        </section>
        {% endif %}
        <!-- hero -->
        <!-- end page content -->
    </main>

    <!-- footer -->
    {% include "footer.njk" %}
    <!-- /footer -->