<!-- code section -->
<section class="bg-black text-white py-8">
    <a class="anchor" name="code" id="code"></a>
    <div class="container p-8">
        <div class="row">
            <div class="col-12 mb-9">
                <h2 class="display-5">
                    Code Highlights
                </h2>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            {% for code in code %}

            <div class="col-md-5 col-lg-4 mb-9 code-thumb">
                <figure class="rounded">
                    <img src="{{ code.image }}" class="shadow mb-0 rounded"
                        sizes="(min-width: 1400px) 403px, (min-width: 1200px) 343px, (min-width: 992px) 283px, (min-width: 768px) 259px, (min-width: 576px) 476px, calc(100vw - 40px)"
                        width="518" height="518" alt="" loading="lazy" decoding="async" />
                    <figcaption class="text-white p-4 rounded-bottom">
                        <span class="h6 fw-bold text-white d-block p-0 m-0 ">{{ code.headline }}</span>
                        <span class="fig-detail text-white">{{ code.title }}</span>
                        <div class="d-flex pt-4">
                            <a href="{{ code.live }}" name="{{ code.headline }}" title="{{ code.headline }}"
                                class="btn btn-primary btn-sm me-4">Live Code</a>
                            <a href="{{ code.repo }}" name="{{ code.headline }}" title="{{ code.headline }}"
                                class="btn btn-primary btn-sm">View Repo</a>
                        </div>
                    </figcaption>
                </figure>
            </div>
            {% endfor %}
            <!-- view more link -->
            <div class="view-link">
                <div class="container p-8">
                    <div class="row">
                        <p id="viewMore" class="text-white mb-0 pb-0 d-inline overflow-hidden">
                            See these projects and my latest work <a href='https://github.com/ninjulia'
                                name='latest_work' rel='noreferrer' title='github' class="text-white">on GitHub.</a>
                        </p>
                    </div>
                </div>
            </div>
            <!-- /view more link -->
        </div>
    </div>
</section>